{
  "name": "@theiceji/compose-plugins",
  "version": "1.0.0",
  "type": "module",
  "homepage": "https://github.com/Jirayu-ninl/theiceji-compose-plugins#readme",
  "description": "A utility to compose and manage Next.js plugins with advanced phase control",
  "main": "index.js",
  "bugs": {
    "url": "https://github.com/Jirayu-ninl/theiceji-compose-plugins/issues"
  },
  "author": "Jirayu Ninlapun",
  "keywords": [
    "nextjs config",
    "nextjs",
    "typescript",
    "compose-plugins",
    "with plugins"
  ],
  "packageManager": "bun@1.2.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jirayu-ninl/theiceji-compose-plugins.git"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "bunchee",
    "dev": "bunchee -w --no-clean",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.2.0",
    "@types/node": "^22.13.5",
    "@types/react": ">=19.0.0",
    "bunchee": "^6.4.0",
    "glob": "^11.0.1",
    "globals": "^16.0.0",
    "next": ">=15.0.0",
    "rimraf": "^6.0.1",
    "turbo": "2.3.4",
    "typescript": "^5.7.3"
  },
  "directories": {
    "test": "test"
  }
}
